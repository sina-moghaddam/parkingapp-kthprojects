<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="1" >
	
    
    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="159dp"

        android:layout_height="67dp"
        android:gravity="left|center_vertical" >

        <TextView
            android:id="@+id/ParkingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="@string/ParkingName"
            android:textColor="#000000"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/ParkingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ParkingName"
            android:layout_alignParentBottom="false"
            android:layout_below="@id/ParkingName"
            android:gravity="left|center_vertical"
            android:text="@string/Address"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_width="fill_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="25dp"
        android:layout_weight="0.23"
        android:gravity="left|center_vertical" >

        <TextView
            android:id="@+id/ParkingCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/Capacity"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ParkingPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ParkingCapacity"
            android:layout_alignTop="@id/ParkingCapacity"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ParkingCapacity"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/Price"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>