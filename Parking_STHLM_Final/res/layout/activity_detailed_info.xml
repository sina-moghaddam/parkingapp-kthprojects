<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedInfoView" >

    <TextView
        android:id="@+id/parkingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="ParkingName"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/parkingAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/parkingName"
        android:layout_below="@+id/parkingName"
        android:text="Address"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/distanceInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/parkingAddress"
        android:layout_below="@+id/parkingAddress"
        android:layout_marginTop="10dp"
        android:text="400 m"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/availableSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/parkingAddress"
        android:layout_alignBottom="@+id/parkingAddress"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="AvailablePic" />

    <TextView
        android:id="@+id/Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/detailedHeader"
        android:layout_below="@+id/view3"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="Price:"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/totalSpaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Price"
        android:layout_below="@+id/Price"
        android:text="Total Spaces: "
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/OpeningHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/totalSpaces"
        android:layout_below="@+id/totalSpaces"
        android:layout_marginBottom="10dp"
        android:text="Opening hours:"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detailedHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Price"
        android:layout_alignLeft="@+id/view3"
        android:text="Details"
        android:textColor="#0b09ae"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view1"
        android:layout_width="310dip"
        android:layout_height="1dip"
        android:layout_alignLeft="@+id/view3"
        android:layout_below="@+id/distanceInfo"
        android:layout_marginTop="20dp"
        android:background="#82949c" />

    <View
        android:id="@+id/view3"
        android:layout_width="310dip"
        android:layout_height="1dip"
        android:layout_marginLeft="25sp"
        android:layout_below="@+id/View01"
        android:layout_marginTop="60sp"
        android:background="#0b09ae" />

    <View
        android:id="@+id/View01"
        android:layout_width="310dip"
        android:layout_height="1dip"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@id/view3"
        android:background="#82949c" />

    <ImageButton
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/View01"
        android:layout_alignRight="@+id/availableSpace"
        android:layout_marginRight="25sp"
        android:clickable="true"
        android:src="@drawable/map3" />

    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="28sp"
        android:layout_toLeftOf="@+id/imageView3"
        android:clickable="true"
        android:onClick="getDirectionOnClick"
        android:src="@drawable/direction4" />

    <TextView
        android:id="@+id/moreInfoDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/totalSpaces"
        android:layout_below="@+id/OpeningHour"
        android:layout_marginTop="20dp"
        android:text="inja info miyad"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/moreInfoDescription"
        android:layout_below="@+id/OpeningHour"
        android:text="More info:"
        android:textSize="19sp" 
        android:textStyle="bold"/>

</RelativeLayout>